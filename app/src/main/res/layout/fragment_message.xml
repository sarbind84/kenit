    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#182058"
    android:orientation="vertical"
    tools:context=".login_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.7dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="296dp"
                    android:layout_height="390.3dp"
                    android:layout_marginLeft="30.3dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/white_rounded_corner"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.5dp"
                        android:gravity="center_horizontal"
                        android:text="ENTER ORDER DETAILS"
                        android:textColor="#333232"
                        android:textSize="23.3sp" />


                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@android:color/transparent"
                        android:hint="Order Name"
                        android:maxLines="1"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:hint="Order Quantity"
                        android:maxLines="1"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:hint="Order Price"
                        android:maxLines="1"
                        android:textColorHint="#c2c2c2"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.7dp"
                        android:layout_marginRight="17.3dp"
                        android:background="#9e9e9e" />


                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF"
                        android:text="ADD ORDER"
                        app:backgroundTint="#E03E3E"></Button>

                    <LinearLayout
                        android:layout_marginTop="59dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="60dp"
                            android:layout_marginRight="17dp"
                            android:background="#FFFFFF"
                            android:text="PAY NOW"
                            app:backgroundTint="#E03E3E">

                        </Button>

                        <EditText
                            
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@android:color/transparent"
                            android:hint="Total Order Price"
                            android:layout_weight="1"
                            android:layout_gravity="bottom|center"
                            android:maxLines="1"
                            android:textColorHint="#c2c2c2"
                            android:textCursorDrawable="@drawable/grey_cursor_color"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <Button
                        android:layout_width="266dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"


                        android:layout_marginRight="16dp"
                        android:background="#FFFFFF"
                        android:text="View All Your Orders List"
                        app:backgroundTint="#E03E3E">

                    </Button>


                </LinearLayout>


            </FrameLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="33dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="21.7dp"
                android:background="@drawable/rounded_corner" />


